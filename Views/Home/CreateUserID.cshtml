@model WebAppTilausDB.Models.Logins

@{
    ViewBag.Title = "Rekisteröidy käyttäjäksi";
}

    <h2>Rekisteröidy käyttäjäksi</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <p>Tällä sivulla voit rekisteröityä tilausjärjestelmän käyttäjäksi. Luo itsellesi käyttäjätunnus ja salasana kirjoittamalla ne alla oleviin kenttiin. Paina lopuksi <b>Luo tunnukset</b> painiketta.</p>
    <p><strong>HUOM</strong> Rekisteröitymällä saat perustasoiset käyttäjäoikeudet, joilla voit tarkastella järjestelmän tietoja. Mikäli haluat muokata tietoja, tarvitset hallintaoikeudet. Haliintaoikeuksia voit hakea täältä: <a href="mailto:lauri.leskinent@student.careeria.fi">user.management@vahatyo.com</a></p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Käyttäjätunnus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Käyttäjätunnus, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Käyttäjätunnus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Salasana, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Salasana, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Salasana, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserRoles.Rooli, "Rooli", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Rooli", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserRoles.Rooli, " ", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Luo tunnukset" class="btn btn-success" />
        </div>
    </div>
</div>
}
