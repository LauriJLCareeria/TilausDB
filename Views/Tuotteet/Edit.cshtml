@model WebAppTilausDB.Models.Tuotteet

@{
    ViewBag.Title = "Muokkaa tuotetietoja";
}

<h2>Muokkaa tuotetietoja</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TuoteID)

        <div class="form-group">
            <p>Nimi</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nimi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nimi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Hinta</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ahinta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ahinta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Kuva (linkki)</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KuvaLinkki, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KuvaLinkki, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tallenna" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-success" @Html.ActionLink("Tuotteet", "Index")
</div>
